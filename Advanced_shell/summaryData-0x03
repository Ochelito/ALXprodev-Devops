#!/bin/bash
echo "Name,Height (m),Weight (kg)" > pokemon_report.csv; for f in pokemon_data/*.json; do name=$(jq -r '.name|ascii_upcase' "$f"); h=$(jq -r '.height/10' "$f"); w=$(jq -r '.weight/10' "$f"); echo "$name,$h,$w" >> pokemon_report.csv; done; echo -e "\nAverage Height: $(awk -F, 'NR>1{sum+=$2;n++}END{printf "%.2f",sum/n}' pokemon_report.csv) m\nAverage Weight: $(awk -F, 'NR>1{sum+=$3;n++}END{printf "%.2f",sum/n}' pokemon_report.csv) kg"
