#!/bin/bash
mkdir -p pokemon_data; for p in bulbasaur ivysaur venusaur charmander charmeleon; do (curl -s -f "https://pokeapi.co/api/v2/pokemon/$p" -o "pokemon_data/$p.json" || echo "Error fetching $p" >> errors.txt) & done; jobs; sleep 2; kill $(jobs -p) 2>/dev/null; wait; echo "Parallel fetch complete âœ…"
